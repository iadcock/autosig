modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "at-spi2-atk", "at-spi2-core", "atk", "chromium", "cups", "dbus", "expat", "gitFull", "glib", "gtk3", "libgbm", "libxcrypt", "libxkbcommon", "mesa", "nspr", "nss", "pango", "playwright-driver", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "xorg.libxcb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trading Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tradier Smoke Test"

[[workflows.workflow]]
name = "Trading Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dashboard.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Tradier Smoke Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python tradier_smoketest.py"

[workflows.workflow.metadata]
outputType = "console"

[userenv]

[userenv.shared]
DRY_RUN = "false"
LIVE_TRADING = "true"
USE_LOCAL_ALERTS = "false"

[[ports]]
localPort = 5000
externalPort = 80
